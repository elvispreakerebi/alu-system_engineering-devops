#!/usr/bin/env bash
# This script installs Nginx, modifies the default page to include "Holberton School", and configures it to start on port 80.

# Update package list and install Nginx with -y to automatically confirm installation
apt-get update -y
apt-get install nginx -y

# Modify the default Nginx welcome page to include "Holberton School"
echo "Holberton School for the win!" | tee /var/www/html/index.nginx-debian.html

# Start Nginx without using systemctl
service nginx start

# Confirm that Nginx is running on port 80
curl -I localhost
